#include <stdio.h>

#define N 10 // tamanho do tabuleiro

int main() {
    int tabuleiro[N][N] = {0};

    // Navio 1 - Vertical (3 posições)
    int x1 = 1, y1 = 2;
    for (int i = 0; i < 3; i++) {
        tabuleiro[x1 + i][y1] = 3;
    }

    // Navio 2 - Horizontal (4 posições)
    int x2 = 5, y2 = 1;
    for (int j = 0; j < 4; j++) {
        tabuleiro[x2][y2 + j] = 3;
    }

    // Navio 3 - Diagonal principal (3 posições)
    int x3 = 2, y3 = 5;
    for (int k = 0; k < 3; k++) {
        tabuleiro[x3 + k][y3 + k] = 3;
    }

    // Navio 4 - Diagonal secundária (3 posições)
    int x4 = 7, y4 = 6;
    for (int k = 0; k < 3; k++) {
        tabuleiro[x4 - k][y4 + k] = 3;
    }

    // Exibir o tabuleiro completo
    printf("Tabuleiro 10x10 (0 = livre, 3 = ocupado):\n\n");
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            printf("%d ", tabuleiro[i][j]);
        }
        printf("\n");
    }

    return 0;
}
