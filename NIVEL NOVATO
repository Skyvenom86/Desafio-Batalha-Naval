#include <stdio.h>

int main() {
    // Tabuleiro 5x5 para simplificar
    int tabuleiro[5][5] = {0};

    // Navio vertical (3 posições)
    int inicioX = 1, inicioY = 2; // posição inicial (linha 1, coluna 2)
    for (int i = 0; i < 3; i++) {
        tabuleiro[inicioX + i][inicioY] = 1;
    }

    // Navio horizontal (4 posições)
    int inicioX2 = 4, inicioY2 = 0; // posição inicial (linha 4, coluna 0)
    for (int j = 0; j < 4; j++) {
        tabuleiro[inicioX2][inicioY2 + j] = 1;
    }

    // Exibir as coordenadas ocupadas pelos navios
    printf("Coordenadas ocupadas pelos navios:\n");
    for (int i = 0; i < 5; i++) {
        for (int j = 0; j < 5; j++) {
            if (tabuleiro[i][j] == 1) {
                printf("(%d, %d)\n", i, j);
            }
        }
    }

    return 0;
}
